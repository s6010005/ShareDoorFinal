@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Log in";
}

<div class="container">
    <a class="navbar-brand" href="@Url.Action("Index","Home")"> <img src="~/Images/Screenshot_1.png" /> </a>
    <div class="float-right mt-3">
        <span class="font-weight-bold">
            Μείνε μαζί μας..
        </span>
        <img src="https://cdn3.iconfinder.com/data/icons/free-social-icons/67/facebook_circle_color-256.png" style="height:40px;cursor:pointer" class="mr-2" />
        <img src="https://cdn2.iconfinder.com/data/icons/social-icons-33/128/Instagram-256.png" style="height:40px;cursor:pointer" class="mr-2 " />
        <img src="https://cdn2.iconfinder.com/data/icons/social-icons-circular-color/512/gmail-256.png" style="height:40px;cursor:pointer" class="mr-2" />
        <img src="https://cdn3.iconfinder.com/data/icons/free-social-icons/67/youtube_circle_color-256.png" style="height:40px;cursor:pointer" class="mr-2" />
    </div>

</div>

<nav class="navbar navbar-expand-lg navbar-dark shadow mainNav">
    <div class="container">

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Index","Home")">Αρχική <span class="sr-only">(current)</span></a>
                </li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("AdminMain","Admin")">Admin <span class="sr-only"></span></a>
                    </li>
                }

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("AdsOptions","Home")">Καταχώρηση Αγγελίας</a>
                </li>

                @if (User.IsInRole("Gold Member") || User.IsInRole("Silver Member") || User.IsInRole("Admin"))
                {
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Chat","Home")">Chat <span class="sr-only"></span></a>
                    </li>
                }

            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>


</nav>







