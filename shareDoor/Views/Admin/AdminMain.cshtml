@section scripts{
    <script>
        window.onload = function () {

            var options1 = {
                animationEnabled: true,
                theme: "light2",
                title: {
                    text: "Πραγματικοί & Προβλεπόμενοι Χρήστες"
                },
                axisX: {
                    valueFormatString: "DD MMM"
                },
                axisY: {
                    title: "Αριθμός Χρηστών",
                    suffix: "",
                    minimum: 20,
                    maximum: 150
                },
                toolTip: {
                    shared: true
                },
                legend: {
                    cursor: "pointer",
                    verticalAlign: "bottom",
                    horizontalAlign: "left",
                    dockInsidePlotArea: true,
                    itemclick: toogleDataSeries
                },
                data: [{
                    type: "line",
                    showInLegend: true,
                    name: "Προβλεπόμενοι Χρήστες",
                    markerType: "square",
                    xValueFormatString: "DD MMM, YYYY",
                    color: "#F08080",
                    yValueFormatString: "#,##0K",
                    dataPoints: [
                        { x: new Date(2019, 4, 10), y: 63 },
                        { x: new Date(2019, 4, 13), y: 69 },
                        { x: new Date(2019, 4, 16), y: 65 },
                        { x: new Date(2019, 4, 19), y: 70 },
                        { x: new Date(2019, 4, 22), y: 71 },
                        { x: new Date(2019, 4, 25), y: 65 },
                        { x: new Date(2019, 4, 28), y: 73 },
