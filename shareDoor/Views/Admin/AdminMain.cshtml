                    showInLegend: true,
                    name: "Πραγματικοί Χρήστες",
                    lineDashType: "dash",
                    yValueFormatString: "#,##0K",
                    dataPoints: [
                        { x: new Date(2019, 4, 10), y: 45 },
                        { x: new Date(2019, 4, 13), y: 53 },
                        { x: new Date(2019, 4, 16), y: 58 },
                        { x: new Date(2019, 4, 19), y: 50 },
                        { x: new Date(2019, 4, 22), y: 59 },
                        { x: new Date(2019, 4, 25), y: 64 },
                        { x: new Date(2019, 4, 28), y: 67 },
                        { x: new Date(2019, 5, 1), y: 65 },
                        { x: new Date(2019, 5, 4), y: 70 },
                        { x: new Date(2019, 5, 7), y: 69 },
                        { x: new Date(2019, 5, 10), y: 64 },
                        { x: new Date(2019, 5, 13), y: 70 },
                        { x: new Date(2019, 5, 16), y: 66 },
                        { x: new Date(2019, 5, 19), y: 72 },
                        { x: new Date(2019, 5, 22), y: 69 }
                    ]
                }]
            };
            $("#chartContainer").CanvasJSChart(options1);

            function toogleDataSeries(e) {
                if (typeof (e.dataSeries.visible) === "undefined" || e.dataSeries.visible) {
                    e.dataSeries.visible = false;
                } else {
                    e.dataSeries.visible = true;
                }
                e.chart.render();
            }



            var options2 = {
                theme: "light2",
                title: {
                    text: "Κίνηση Ιστοσελίδας"
                },
                data: [{
                    type: "pie",
                    startAngle: 45,
                    showInLegend: "true",
                    legendText: "{label}",
                    indexLabel: "{label} ({y})",
                    yValueFormatString: "#,##0.#" % "",
                    dataPoints: [
